<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title, class:"book_title" %>
<p>Body</p>
<%= f.text_area :body, class:"book_body" %>
<div>
	<%= f.submit "Update Book" %>
</div>
<% end %>

<%= link_to "Show", books_path(@book.id), class:"show_#{@book.id}", method: :get %> <span>|</span> <%= link_to "Back", books_path, class:"back", method: :get %>